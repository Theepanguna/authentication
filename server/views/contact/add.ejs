<%-include ../partials/header.ejs%>

<!--Content for the Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md col-md-12">
            <div class="jumbotron text-center" style="margin-bottom:0">
                <h1><%=title %></h1>
              </div>
               <%-include ../partials/main_nav.ejs%>

            <form class="form" method="POST">
                <div class="form group">
                    <label for="nameTextField">Contact Name  </label>
                    <input type="text" class="form control"
                    id="nameTextField"
                    placeholder = "Enter the Contact Name"
                    name="ContactName" required>
                    </div>

                    <div class="form group">
                    <label for="authorTextField">Contact Number</label>
                    <input type="text" class="form control"
                    id="authorTextField"
                    placeholder = "Enter the Contact Number"
                    name="ContactNumber" required>
                    </div>
                    
                    <div class="form group">
                    <label for="publishedTextField">Email Address  </label>
                    <input type="text" class="form control"
                    id="publishedTextField"
                    placeholder = "Enter the Email Address"
                    name="EmailAddress" required>
                    </div>

                    
                    

                    <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>submit</button>
                    <a href="/contactlist" class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a>
                    </div>
                    

                </form>
        </div>
        </div>
    </div>


 <%-include ../partials/bottom_nav.ejs%>
