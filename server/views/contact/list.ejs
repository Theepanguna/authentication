<%-include ../partials/header.ejs%>

  <!--Main Nav Navigation-->
  
<main class="container">
  <div class="row">
    <div class="offset-md col-md-12">
      <div class="jumbotron text-center" style="margin-bottom:0">
        <h1><%=title %></h1>
      </div>
        <%-include ../partials/main_nav.ejs%>
          <%if(typeof displayName =='string'&&displayName){%>
        <a href="/contactlist/add" class="btn btn-primary" role="button"><i class="fas fa-plus-circle"></i>Add a Contact</a>
        <%}%>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!--Header Row-->
            <tr>
              <%if(typeof displayName =='string'&&displayName){%>
                <th class="text-center col-2">Contact Name</th>
                <th class="text-center col-2">Contact Number</th>
                <th class="text-center col-1">Email Address</th>
                <th class="text-center col-1"></th>
                <th class="text-center col-1"></th>
                <%}else{%>
                  <th class="text-center col-2">Contact Name</th>
                  <th class="text-center col-2">Contact Number</th>
                  <th class="text-center col-1">Email Address</th>
                <%}%>
                </tr>
               <%for(let count = 0; count < contactlist.length; count ++){%>
                    <tr>
                          <%if(typeof displayName =='string'&&displayName){%>
                        <td class="text-center col-2"><%=contactlist[count].ContactName%></td>
                        <td class="text-center col-2"><%=contactlist[count].ContactNumber%></td>
                        <td class="text-center col-1"><%=contactlist[count].EmailAddress%></td>
                       
                    
                        <td class="text-center col-1"><a href="/contactlist/edit/<%=contactlist[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Update</a></td>
                        <td class="text-center col-1"><a href="/contactlist/delete/<%=contactlist[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>
                        <%}else{%>
                          <td class="text-center col-2"><%=contactlist[count].ContactName%></td>
                          <td class="text-center col-2"><%=contactlist[count].ContactNumber%></td>
                          <td class="text-center col-1"><%=contactlist[count].EmailAddress%></td>
                    
                        <%}%>  
                      </tr>
                        <%}%>
            </table>
        </div>
    </div>
    <script>
      for (var i = 0; i < document.links.length; i++) {
          if (document.links[i].href == document.URL) {
              document.links[i].className = 'active';
          }
      }
      </script>
  </main>
  
